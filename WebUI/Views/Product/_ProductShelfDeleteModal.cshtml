@model Core.Dtos.ProductShelfDto

<!-- ProductShelf Delete Confirmation Modal -->
<div class="modal fade" id="productShelfDeleteModal" tabindex="-1" aria-labelledby="productShelfDeleteModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="productShelfDeleteModalTitle">
                    <i class="fas fa-exclamation-triangle me-2"></i>Stok Kaydı Silme Onayı
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="deleteProductShelfId" value="@Model?.Id" />
                <p class="mb-2">Bu stok kaydını silmek istediğinize emin misiniz?</p>
                <div class="alert alert-info small mb-0">
                    <strong>Mağaza:</strong> @Model?.ShopName<br/>
                    <strong>Depo:</strong> @Model?.WarehouseName<br/>
                    <strong>Raf:</strong> @Model?.ShelfCode<br/>
                    <strong>Adet:</strong> @Model?.Quantity
                </div>
                <p class="text-muted small mt-2 mb-0">
                    <i class="fas fa-info-circle me-1"></i>Bu işlem geri alınamaz.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteProductShelf()">
                    <i class="fas fa-trash me-1"></i>Sil
                </button>
            </div>
        </div>
    </div>
</div>
