@model Core.Dtos.ProductDto
@{
    var regions = ViewBag.Regions as IEnumerable<Core.Dtos.RegionDto> ?? new List<Core.Dtos.RegionDto>();
}

<!-- Detail Modal -->
<div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="detailModalTitle">
                    <i class="fas fa-warehouse me-2"></i>Ürün Stok Detayı
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="detailProductId" value="@Model?.Id" />
                
                <!-- Product Info -->
                <div class="product-info-card mb-4">
                    <div class="row">
                        <div class="col-md-2">
                            @if (!string.IsNullOrEmpty(Model?.CoverUrl))
                            {
                                <img src="@Model.CoverUrl" alt="@Model?.Model" class="img-fluid rounded product-detail-image" />
                            }
                            else
                            {
                                <div class="no-image-large">
                                    <i class="fas fa-image"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-10">
                            <h4 class="mb-2">@Model?.Model</h4>
                            <div class="product-badges">
                                <span class="badge bg-primary me-2">Renk: @Model?.Color</span>
                                <span class="badge bg-secondary me-2">Beden: @Model?.Size</span>
                                <span class="badge bg-dark me-2">EAN: @Model?.Ean</span>
                                <span class="badge bg-success">Fiyat: @Model?.Price.ToString("C2")</span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model?.Description))
                            {
                                <p class="text-muted mt-2 mb-0">@Model.Description</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Shelf Assignment Form -->
                <div class="shelf-assignment-section mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Yeni Stok Ataması</h5>
                        <button type="button" class="btn btn-warning btn-sm" id="btnQuickTransfer">
                            <i class="fas fa-truck me-1"></i>Transfer Talep Et
                        </button>
                    </div>
                    <div class="shelf-assignment-form">
                        <div class="row g-2">
                            <!-- Bölge Seçimi -->
                            <div class="col-md-2">
                                <label class="form-label small">Bölge</label>
                                <select id="detailRegion" class="form-select form-select-sm">
                                    <option value="">-- Seçiniz --</option>
                                    @foreach (var region in regions)
                                    {
                                        <option value="@region.Id">@region.Name</option>
                                    }
                                </select>
                            </div>
                            
                            <!-- Şehir Seçimi -->
                            <div class="col-md-2">
                                <label class="form-label small">Şehir</label>
                                <select id="detailCity" class="form-select form-select-sm" disabled>
                                    <option value="">-- Önce Bölge --</option>
                                </select>
                            </div>
                            
                            <!-- İlçe Seçimi -->
                            <div class="col-md-2">
                                <label class="form-label small">İlçe</label>
                                <select id="detailTown" class="form-select form-select-sm" disabled>
                                    <option value="">-- Önce Şehir --</option>
                                </select>
                            </div>
                            
                            <!-- Mağaza Seçimi -->
                            <div class="col-md-2">
                                <label class="form-label small">Mağaza</label>
                                <select id="detailShop" class="form-select form-select-sm" disabled>
                                    <option value="">-- Önce İlçe --</option>
                                </select>
                            </div>
                            
                            <!-- Depo Seçimi -->
                            <div class="col-md-2">
                                <label class="form-label small">Depo</label>
                                <select id="detailWarehouse" class="form-select form-select-sm" disabled>
                                    <option value="">-- Önce Mağaza --</option>
                                </select>
                            </div>
                            
                            <!-- Raf Seçimi -->
                            <div class="col-md-2">
                                <label class="form-label small">Raf</label>
                                <select id="detailShelf" class="form-select form-select-sm" disabled>
                                    <option value="">-- Önce Depo --</option>
                                </select>
                            </div>
                        </div>
                        <div class="row g-2 mt-2">
                            <!-- Adet -->
                            <div class="col-md-2">
                                <label class="form-label small">Adet</label>
                                <input type="number" id="detailQuantity" class="form-control form-control-sm" value="1" min="1">
                            </div>
                            
                            <!-- Ekle Butonu -->
                            <div class="col-md-10 d-flex align-items-end">
                                <button type="button" class="btn btn-success btn-sm" id="btnAddProductShelf">
                                    <i class="fas fa-plus me-1"></i>Stok Ekle
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Current Shelves List -->
                <div class="current-shelves-section">
                    <h5 class="mb-3"><i class="fas fa-list me-2"></i>Mevcut Stok Durumu</h5>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover" id="productShelvesTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Bölge</th>
                                    <th>Şehir</th>
                                    <th>İlçe</th>
                                    <th>Mağaza</th>
                                    <th>Depo</th>
                                    <th>Raf</th>
                                    <th>Adet</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody id="productShelvesBody">
                                <tr>
                                    <td colspan="8" class="text-center text-muted">
                                        <i class="fas fa-spinner fa-spin me-2"></i>Yükleniyor...
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<!-- ProductShelf Form Modal Container -->
<div id="productShelfFormModalContainer"></div>

<!-- ProductShelf Delete Modal Container -->
<div id="productShelfDeleteModalContainer"></div>
