@model IEnumerable<Core.Dtos.TownDto>

@{
    ViewData["Title"] = "İlçe Yönetimi";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/town.css" asp-append-version="true" />
<script src="~/js/town.js" asp-append-version="true"></script>

<div class="page-container town-container">
    <!-- Header -->
    <div class="page-header town-header">
        <h1 class="page-heading">
            <i class="fas fa-map-marker-alt me-3"></i>İlçe Yönetimi
        </h1>
        <button class="btn btn-primary" id="btnAddTown">
            <i class="fas fa-plus me-2"></i>Yeni İlçe Ekle
        </button>
    </div>

    <!-- Towns Table -->
    <div class="table-wrapper town-table-wrapper">
        @if (Model.Any())
        {
            <table class="table table-hover town-table">
                <thead class="table-header-style">
                    <tr>
                        <th>#</th>
                        <th>İlçe Adı</th>
                        <th>Şehir</th>
                        <th>Bölge</th>
                        <th>Durum</th>
                        <th class="action-column">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var town in Model)
                    {
                        <tr data-town-id="@town.Id">
                            <td>@town.Id</td>
                            <td class="town-name">@town.Name</td>
                            <td>
                                <span class="city-badge">@town.CityName</span>
                            </td>
                            <td>
                                <span class="region-badge">@town.RegionName</span>
                            </td>
                            <td>
                                @if (town.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn btn-edit btn-sm" onclick="editTown(@town.Id)">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </button>
                                    <button class="btn btn-delete btn-sm" onclick="deleteTown(@town.Id)">
                                        <i class="fas fa-trash"></i> Sil
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <p>Henüz ilçe eklenmemiştir</p>
            </div>
        }
    </div>
</div>

<!-- Form Modal Container -->
<div id="formModalContainer"></div>

<!-- Delete Modal Container -->
<div id="deleteModalContainer"></div>
