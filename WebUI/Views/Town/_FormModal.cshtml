@model Core.Dtos.TownDto
@{
    var regions = ViewBag.Regions as IEnumerable<Core.Dtos.RegionDto> ?? new List<Core.Dtos.RegionDto>();
    var cities = ViewBag.Cities as IEnumerable<Core.Dtos.CityDto> ?? new List<Core.Dtos.CityDto>();
}

<!-- Form Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="formModalTitle">
                    @if (Model?.Id > 0)
                    {
                        <text><i class="fas fa-edit me-2"></i>İlçeyi Düzenle</text>
                    }
                    else
                    {
                        <text><i class="fas fa-plus me-2"></i>Yeni İlçe Ekle</text>
                    }
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="townForm">
                <div class="modal-body">
                    <input type="hidden" id="townId" name="Id" value="@(Model?.Id ?? 0)" />
                    
                    <!-- Bölge Seçimi -->
                    <div class="form-group mb-3">
                        <label for="townRegion">Bölge <span style="color: #dc3545;">*</span></label>
                        <select id="townRegion" name="RegionId" class="form-control" required>
                            <option value="">-- Bölge Seçiniz --</option>
                            @foreach (var region in regions)
                            {
                                if (Model?.RegionId == region.Id)
                                {
                                    <option value="@region.Id" selected>@region.Name</option>
                                }
                                else
                                {
                                    <option value="@region.Id">@region.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Şehir Seçimi -->
                    <div class="form-group mb-3">
                        <label for="townCity">Şehir <span style="color: #dc3545;">*</span></label>
                        <select id="townCity" name="CityId" class="form-control" required>
                            <option value="">-- Önce Bölge Seçiniz --</option>
                            @if (Model?.RegionId > 0)
                            {
                                foreach (var city in cities.Where(c => c.RegionId == Model.RegionId))
                                {
                                    if (Model?.CityId == city.Id)
                                    {
                                        <option value="@city.Id" selected>@city.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@city.Id">@city.Name</option>
                                    }
                                }
                            }
                        </select>
                    </div>

                    <!-- İlçe Adı -->
                    <div class="form-group mb-3">
                        <label for="townName">İlçe Adı <span style="color: #dc3545;">*</span></label>
                        <input type="text" id="townName" name="Name" class="form-control" placeholder="İlçe adını girin" value="@(Model?.Name ?? string.Empty)" required>
                    </div>

                    <!-- Aktiflik Durumu -->
                    <div class="form-group">
                        <div class="form-check">
                            <input type="checkbox" id="townIsActive" name="IsActive" class="form-check-input" @(Model?.IsActive == true ? "checked" : "")>
                            <label class="form-check-label" for="townIsActive">
                                Aktif
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary" id="submitButton">
                        @if (Model?.Id > 0)
                        {
                            <text>Güncelle</text>
                        }
                        else
                        {
                            <text>Ekle</text>
                        }
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
