@model IEnumerable<Core.Dtos.CityDto>

@{
    ViewData["Title"] = "Şehir Yönetimi";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/city.css" asp-append-version="true" />
<script src="~/js/city.js" asp-append-version="true"></script>

<div class="page-container city-container">
    <!-- Header -->
    <div class="page-header city-header">
        <h1 class="page-heading">
            <i class="fas fa-building me-3"></i>Şehir Yönetimi
        </h1>
        <button class="btn btn-primary" id="btnAddCity">
            <i class="fas fa-plus me-2"></i>Yeni Şehir Ekle
        </button>
    </div>

    <!-- Cities Table -->
    <div class="table-wrapper city-table-wrapper">
        @if (Model.Any())
        {
            <table class="table table-hover city-table">
                <thead class="table-header-style">
                    <tr>
                        <th>#</th>
                        <th>Şehir Adı</th>
                        <th>Bölge</th>
                        <th>Durum</th>
                        <th class="action-column">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var city in Model)
                    {
                        <tr data-city-id="@city.Id">
                            <td>@city.Id</td>
                            <td class="city-name">@city.Name</td>
                            <td>
                                <span class="region-badge">@city.RegionName</span>
                            </td>
                            <td>
                                @if (city.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn btn-edit btn-sm" onclick="editCity(@city.Id)">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </button>
                                    <button class="btn btn-delete btn-sm" onclick="deleteCity(@city.Id)">
                                        <i class="fas fa-trash"></i> Sil
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <p>Henüz şehir eklenmemiştir</p>
            </div>
        }
    </div>
</div>

<!-- Form Modal Container -->
<div id="formModalContainer"></div>

<!-- Delete Modal Container -->
<div id="deleteModalContainer"></div>

